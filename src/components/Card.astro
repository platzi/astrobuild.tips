---
export interface Props {
	title: string;
	time: string;
	tags: string[];
	slug: string;
}

const { title, time, tags, slug } = Astro.props;
const event = new Date(time);
const date = event.toDateString().slice(0, -4);
---

<article
	class="rounded-xl bg-gradient-to-r from-green-300 via-blue-500 to-purple-600 p-0.5 shadow-xl transition hover:shadow-sm"
>
	<div class="rounded-[10px] bg-white p-4 !pt-10 sm:p-6">
		<time datetime={date} class="block text-xs text-gray-500">
			{date}
		</time>

		<a href={`/posts/${slug}`}>
			<h3 class="mt-0.5 text-lg font-medium text-gray-900">
				{title}
			</h3>
		</a>
		<div class="mt-4 flex flex-wrap gap-1">
			{
				tags.map((item) => (
					<span class="whitespace-nowrap rounded-full bg-purple-100 px-2.5 py-0.5 text-xs text-purple-600">
						{item}
					</span>
				))
			}
		</div>
	</div>
</article>
